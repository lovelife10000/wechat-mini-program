@import "../lib/weui.wxss";
.search-component{

}
.search{
 background: #eee;
 display: flex;

  height: 80rpx;
}
.search-fixed{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1200;
  width:100%;

}
.pad-top-80{
  padding-top: 80rpx;

}

.search-icon {
margin-right: 10rpx;
}

.search-input {
  display: flex;
  align-items:center;
   height: 80rpx; 
  margin-right: auto;
  width: 100%;
  padding-left: 20rpx;

}
.search-input input{
 width: 100%;
 height: 80rpx;
 line-height: 80rpx;

}

.search-input input:focus {
  background-color: red;
}

.search-btn {
  width: 100rpx;
  height: 80rpx;
  margin: 0;
  padding:0;

  line-height: 80rpx;
  font-size: 12px;
  border-radius: 0;
}

.search-list {
   position:fixed;
height: 100%;
overflow: scroll;
width:100%;
background:#fff;
z-index:999;

}
.search-list-label {
  margin-left: 20rpx;
}
.search-list-ul {
}

.search-list-li {
  display: flex;
  border-bottom: 0.5rpx solid #eee;
  height: 70rpx;
  line-height: 70rpx;
  
}

.search-list-li-index {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: green;
  text-align: center;
  color: #fff;
  border-radius: 8rpx;
  margin:0 20rpx;
  align-self: center;
}
.search-list-li-text{
margin-right: auto;
}

